﻿
@page "/history"

@using IMC.Model
@using IMC.Repositorio

@inject ILocalStorageService LocalStorage

<div class="logo-container">
    <img src="assets/icon-no-bg.png" alt="logo" class="logo">
</div>
<header class="PageHeader">
    <span>Histórico</span>
</header>
<main>
    <div class="content">
        <input type="text" class="search" placeholder="Pesquisar...">
        <section class="section-history">
            <table class="tableHistory">
                @foreach(var imcResult in _history)
                {
                    <tr class="rowHistory">
                        <td>
                            <div class="icon-cell"></div>
                        </td>
                        <td class="table-data">
                            <div class="textTitle">@imcResult.Status </div>
                            <div class="textDate">@imcResult.ValorIMC</div>
                            <div class="textDate">@imcResult.DataResultado</div>
                        </td>
                    </tr>
                }
            </table>
        </section>
    </div>
</main>

@code {
    private List<CalcIMC> _history = new();

    protected override void OnInitialized()
    {
        var imcResultRepository = new ImcRepositorio(LocalStorage);

        _history = imcResultRepository.Get();
    }
}